{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,
		"allowImportingTsExtensions": true,

		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"react": ["./node_modules/preact/compat/"],
			"react-dom": ["./node_modules/preact/compat/"],
			"react-dom/*": ["./node_modules/preact/compat/*"],
      "react/jsx-runtime": ["./node_modules/preact/jsx-runtime"],
		}
	}
}
